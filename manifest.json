{
  "name": "WebKnowledge",
  "version": "1.0.0",
  "description": "将网页内容便捷地转换为Markdown格式",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads",
    "debugger",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/16/icon16.png",
      "48": "icons/48/icon48.png",
      "128": "icons/128/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["css/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16/icon16.png",
    "48": "icons/48/icon48.png",
    "128": "icons/128/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["utils/markdown.js"],
      "matches": ["<all_urls>"]
    }
  ]
}